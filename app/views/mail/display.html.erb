<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

  <%= form_tag("/display") do %>
    <%= label_tag(:to, "To:") %>
    <%= text_field_tag(:to) %><br>
	<%= label_tag(:sub, "Subject:") %>
